<%- include('../partials/header') %>

<form id="new-note-form" action="/notes" method="POST">
	<label class="purple-font">New Note:</label>
	<input type="text" name="noteText" placeholder="Write your note here">
	<label class="purple-font">Choose Quarter and Year:</label>
	<select class="red-font" name="QuarterYearChoice">
		<option value="Choose" selected>Make a choice</option>
		<option value="Q423">Q4 2023</option>
		<option value="Q124">Q1 2024</option>
		<option value="Q224">Q2 2024</option>
		<option value="Q324">Q3 2024</option>
		<option value="Q424">Q4 2024</option>
		<option value="Q125">Q1 2025</option>
		<option value="Q225">Q2 2025</option>
		<option value="Q325">Q3 2025</option>
		<option value="Q425">Q4 2025</option>
	</select>
	<label class="purple-font">Choose OKR:</label>
	<select class="red-font" name="okrChoice">
		<option value="Choose" selected>Make a choice</option>
		<option value="objectiveOne">Objective One</option>
		<option value="objectiveOneKeyResultOne">Objective One's Key Result One</option>
		<option value="objectiveOneKeyResultTwo">Objective One's Key Result Two</option>
		<option value="objectiveOneKeyResultThree">Objective One's Key Result Three</option>
		<option value="objectiveTwo">Objective Two</option>
		<option value="objectiveTwoKeyResultOne">Objective Two's Key Result One</option>
		<option value="objectiveTwoKeyResultTwo">Objective Two's Key Result Two</option>
		<option value="objectiveTwoKeyResultThree">Objective Two's Key Result Three</option>
		<option value="objectiveThree">Objective Three</option>
		<option value="objectiveThreeKeyResultOne">Objective Three's Key Result One</option>
		<option value="objectiveThreeKeyResultTwo">Objective Three's Key Result Two</option>
		<option value="objectiveThreeKeyResultThree">Objective Three's Key Result Three</option>
	</select>
	<label class="purple-font">Log Date:</label>
	<input class="red-font" type="date" name="dueDate">
	<input class="button-link" type="submit" value="Add Note">
</form>

<%- include('../partials/footerDeep') %>